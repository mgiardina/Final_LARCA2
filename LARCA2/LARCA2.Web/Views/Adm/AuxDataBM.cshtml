@model Larca2.Models.AuxDataSearchForm
@{
    ViewBag.Title = "Global Parameters Managment";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                This screen allows the visualization and modification of system's global parameters.
            </p>
        </div>
    </section>
}
<div class="container-fluid">

    @using (Html.BeginForm("ModifAuxData", "Adm", FormMethod.Post, new { name = "myform" }))
    {
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="Edit Row" name="Modificar" id="Modificar" class="btn btn-warning" />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th width="17%" align="center">
                                <label>Top Level 2</label>
                            </th>
                            <th width="16%" align="center">
                                <label>Top Level 3</label>
                            </th>
                            <th width="17%" align="center">
                                <label>Max allowed cloning</label>
                            </th>
                            <th width="16%" align="center">
                                <label>Excel Rows From</label>
                            </th>
                            <th width="17%" align="center">
                                <label>Excel Columns From</label>
                            </th>
                            <th width="17%" align="center">
                                <label>Expected report subscriptions</label>
                            </th>
                            <th width="17%" align="center">
                                <label>Available days</label>
                            </th>
                        </tr>
                        <tr>
                            <td width="17%" align="center">
                                <label>
                                    @Model.AuxData.TopLvl2
                                </label>
                            </td>
                            <td width="16%" align="center">
                                <label>
                                    @Model.AuxData.TopLvl3
                                </label>
                            </td>
                            <td width="17%" align="center">
                                <label>
                                    @Model.AuxData.Toplvl4
                                </label>
                            </td>
                            <td width="16%" align="center">
                                <label>
                                    @Model.AuxData.XlsRowFrom
                                </label>
                            </td>
                            <td width="17%" align="center">
                                <label>
                                    @Model.AuxData.XlsColumnFrom
                                </label>
                            </td>
                            <td width="17%" align="center">
                                <label>
                                    @Model.AuxData.CntAdjuntos
                                </label>
                            </td>
                            <td width="17%" align="center">
                                <label>
                                    @Model.AuxData.DiasReporte
                                </label>
                            </td>

                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
