@model Larca2.Models.RcClasificationSearchForm

@{
    ViewBag.Title = "New RC Clasification";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
        </div>
    </section>
}
<div class="container-fluid">

    @using (Html.BeginForm("AgregarRcClasification", "Adm", FormMethod.Post))
    {
        <div class="row" style="margin-top:10px;">
            <div class="col-sm-12">
                <fieldset class="form-group">
                    <label for="Nombre">Level</label>
                    @Html.TextBoxFor(m => m.RcClasification.level_name, new { @class = "form-control", @placeholder = "Level ...", @MaxLength = "1" })
                    <small class="text-muted">@Html.ValidationMessageFor(m => m.RcClasification.level_name)</small>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset class="form-group">
                    <label for="Nombre">Code</label>
                    @Html.TextBoxFor(m => m.RcClasification.Code, new { @class = "form-control", @placeholder = "Code ...", @MaxLength = "7" })
                    <small class="text-muted">@Html.ValidationMessageFor(m => m.RcClasification.Code)</small>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset class="form-group">
                    <label for="Nombre">Description</label>
                    @Html.TextBoxFor(m => m.RcClasification.Description, new { @class = "form-control", @placeholder = "Description...", @MaxLength = "50" })
                    <small class="text-muted">@Html.ValidationMessageFor(m => m.RcClasification.Description)</small>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset class="form-group">
                    <label for="Nombre">Ownership</label>
                    @Html.TextBoxFor(m => m.RcClasification.Ownership, new { @class = "form-control", @placeholder = "Ownership ...", @MaxLength = "5" })
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset class="form-group">
                    <label for="Nombre">Delete</label><br />
                    @Html.CheckBoxFor(m => m.RcClasification.deleted, new { @class = "form-control" })
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="Save" name="Guardar" class="btn btn-success" />
                <input type="button" value="Back" id="Volver" class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("RcClasificationBM", "Adm") + "'");" />
            </div>
        </div>
    }
</div>
