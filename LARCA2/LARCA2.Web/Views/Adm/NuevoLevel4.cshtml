@model Larca2.Models.Level4SearchForm

@{
    ViewBag.Title = "New Level 4";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                Here you can create a new Level 4 from the system.
            </p>
        </div>
    </section>
}

<script>

    $(document).ready(function () {


        $('#btnGuardar').on('click', function () {

            if (document.getElementById('Descripcion').value == "") {

                document.getElementById("Requerido").style.display = "";
                return false;
            }
        });

    });

</script>


<div class="container-fluid">

    @using (Html.BeginForm("Agregar_abm_level4", "Adm", new { }, FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-13">
                <fieldset class="form-group">
                    <label for="Nombre">Descripcion</label>
                    <input type="hidden" id="txtNivel" name="txtNivel" value=@ViewBag.Id />
                    @Html.TextBoxFor(m => m.Level4.name, new { @class = "form-control", @placeholder = "Descripcion...", @MaxLength = "50", id="Descripcion" })
                    <div id="Requerido" style="color:red;display:none">Descripción Requerida</div>
                    <small class="text-muted">@Html.ValidationMessageFor(m => m.Level4.name)</small>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="pull-right col">
                <input type="submit" value="Guardar" name="Guardar" id="btnGuardar" class="btn btn-success" />&nbsp;&nbsp;&nbsp;
                <input type="button" value="Volver" id="Volver" class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("Level4", "Adm") + "'");" />
            </div>
        </div>
    }
</div>